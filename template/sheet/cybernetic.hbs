<form class="{{cssClass}}" autocomplete="off">
    <div class="header border">
        <div class="flex row">
            <div class="avatar">
                <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
            </div>
            <div class="flex column grow justify-center">
                <div class="name header-row">
                    <label>{{localize "CYBERNETIC.NAME"}}</label>
                    <input name="name" type="text" value="{{item.name}}" />
                </div>
            </div>
        </div>
    </div>

    <div class="sheet-tabs tabs flex row" data-group="primary">
        <b class="item" data-tab="data">{{localize "TAB.DATA"}}</b>
        <b class="item" data-tab="notes">{{localize "TAB.NOTES"}}</b>
    </div>

    <div class="sheet-body">
        <div class="tab" data-group="primary" data-tab="data">
            <div class="stats border">
                <h1>{{localize "TITLE.STATS"}}</h1>
                <div class="stats-row">
                    <div class="stat installed">
                        <label>{{localize "CYBERNETIC.INSTALLED"}}</label>
                        {{#if system.installed}}
                            <input name="system.installed" type="checkbox" value="installed" checked/>
                        {{else}}
                            <input name="system.installed" type="checkbox" value="installed"/>
                        {{/if}}
                    </div>
                </div>
                <div class="stats-row">
                    <div class="stat craftsmanship">
                        <label>{{localize "CYBERNETIC.CRAFTSMANSHIP"}}</label>
                        <select name="system.craftsmanship">
                            {{selectOptions (config "craftmanship") selected=system.craftsmanship localize=true}}
                        </select>
                    </div>
                    <div class="stat availability">
                        <label>{{localize "CYBERNETIC.AVAILABILITY"}}</label>
                        <select name="system.availability">
                            {{selectOptions (config "availability") selected=system.availability localize=true}}
                        </select>
                    </div>
                    <div class="stat weight">
                        <label>{{localize "CYBERNETIC.WEIGHT"}}</label>
                        <input name="system.weight" type="number" value="{{system.weight}}" data-dtype="Number" />
                    </div>
                </div>
            </div>
            <div class="characteristics border">
                <h1>{{localize "TITLE.CHARACTERISTICS"}}</h1>
                <table class="characteristics-table">
                    <thead>
                        <tr>
                            <th>{{localize "CHARACTERISTIC.NAME"}}</th>
                            <th>{{localize "CHARACTERISTIC.NORMAL"}}</th>
                            <th>{{localize "CHARACTERISTIC.UNNATURAL"}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each (config "characteristics") as |label key|}}
                            {{#with (lookup ../system.characteristics key) as |char|}}
                                <tr>
                                    <td>{{localize label}}</td>
                                    <td class="normal">
                                        <span class="sign">{{#if (gte char.normal 0)}}+{{/if}}</span>
                                        <input name="system.characteristics.{{key}}.normal" type="number" value="{{char.normal}}" data-dtype="Number" />
                                    </td>
                                    <td class="unnatural">
                                        <span class="sign">{{#if (gte char.unnatural 0)}}+{{/if}}</span>
                                        <input name="system.characteristics.{{key}}.unnatural" type="number" value="{{char.unnatural}}" data-dtype="Number" />
                                    </td>
                                </tr>
                            {{/with}}
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="tab" data-group="primary" data-tab="notes">
            <div class="notes-editor border">
                <h1>{{localize "TITLE.NOTES"}}</h1>
                <div style="height: 132px; width: 100%">
                    {{editor enrichment.system.description target="system.description" engine="prosemirror" button=true owner=owner editable=editable}}
                </div>
            </div>
        </div>
    </div>
</form>

